<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ShowResultView">
    <TextView
        android:id="@+id/resultAmountOfZeroMinimalScoreSpecialtiesText"
        android:gravity="center"
        android:text="@string/resultAmountOfZeroMinimalScoreSpecialties"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/resultAmountOfZeroMinimalScoreSpecialtiesValue"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resultAmountOfZeroMinimalScoreSpecialtiesText"/>
    <Button
        android:id="@+id/resultShowSpecialtiesWithZeroMinimalScore"
        android:text="@string/resultShowSpecialties"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resultAmountOfZeroMinimalScoreSpecialtiesValue"/>
    <TextView
        android:id="@+id/resultAmountOfFittingSpecialtiesText"
        android:gravity="center"
        android:text="@string/resultAmountOfFittingSpecialties"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resultShowSpecialtiesWithZeroMinimalScore"/>
    <TextView
        android:id="@+id/resultAmountOfFittingSpecialtiesValue"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resultAmountOfFittingSpecialtiesText"/>
    <Button
        android:id="@+id/resultShowFittingSpecialties"
        android:text="@string/resultShowSpecialties"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resultAmountOfFittingSpecialtiesValue"/>
    <Button
        android:id="@+id/resultSaveAndMoveToProfile"
        android:text="@string/resultSaveAndMoveToProfile"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.select_specialties.ShowResultView">
    <LinearLayout
        android:id="@+id/resultLinearLayout"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/resultSaveAndMoveToProfile">
        <LinearLayout
            android:id="@+id/resultSpecialtiesWithoutScoreLL"
            style="@style/mainLinearLayout"
            android:layout_weight="1">
            <TextView
                android:text="@string/resultSpecialtiesWithoutScoreTitle"
                style="@style/textTitle" />
            <View
                style="@style/Divider" />
            <LinearLayout
                android:id="@+id/resultSpecialtiesWithoutScoreAmount"
                android:orientation="horizontal"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/resultSpecialtiesWithoutScoreAmountText"
                    android:text="@string/amountOfSpecialties"
                    android:textSize="17sp"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/resultSpecialtiesWithoutScoreAmountValue"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <Button
                android:id="@+id/resultSpecialtiesWithoutScoreShowSpecialties"
                android:text="@string/resultSpecialtiesWithoutScoreShowSpecialties"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/resultFittingSpecialtiesLL"
            style="@style/mainLinearLayout"
            android:layout_weight="1">
            <TextView
                android:text="@string/resultFittingSpecialtiesTitle"
                style="@style/textTitle" />
            <View
                style="@style/Divider" />
            <LinearLayout
                android:id="@+id/resultFittingSpecialtiesAmount"
                android:orientation="horizontal"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/resultFittingSpecialtiesAmountText"
                    android:textSize="17sp"
                    android:text="@string/amountOfSpecialties"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/resultFittingSpecialtiesAmountValue"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <Button
                android:id="@+id/resultFittingSpecialtiesShowSpecialties"
                android:text="@string/resultFittingSpecialtiesShowSpecialties"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/resultSaveAndMoveToProfile"
        android:text="@string/resultSaveAndMoveToProfile"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>